{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "gulp",
			"task": "default",
			"problemMatcher": [],
			"label": "Site Live Preview"
		},
		{
			"type": "gulp",
			"task": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "Build Site",
		},
		{
		"label": "Install runtime dependencies",
		"type": "shell",
		"command": "npm install gulp-cli -g && npm install && bundle install",
		"runOptions": {
			"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "silent"
			  }
		},
		{
		"label": "Install All Recommended Extensions",
		"type": "shell",
		"command": "jq -r '.recommendations[]' ./.vscode/extensions.json | xargs -L 1 code --install-extension",
		"runOptions": {
			"runOn": "folderOpen"
			},
			"presentation": {
				"reveal": "silent"
			  }
		}
	]
}